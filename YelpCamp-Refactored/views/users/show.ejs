<% include ../partials/header %>

<div class="row">
	<div class="col-md-4">
		<h1><%= user.firstName + " " + user.lastName %></h1>
		<div class="thumbnail">
			<img src="<%= user.avatar %>" alt="user profile image">
			<div class="caption"><a href="mailto:<%= user.email %>"><%= user.email %></a></div>
		</div>
		Bacon ipsum dolor amet buffalo ribeye flank brisket picanha ground round jowl, tongue kevin meatloaf turkey jerky short ribs frankfurter 			turducken. Fatback pork loin corned beef ground round cupim landjaeger jerky swine. Filet mignon spare ribs ground round rump pork belly 			landjaeger pancetta meatloaf. Tenderloin t-bone spare ribs strip steak leberkas. Swine beef bresaola t-bone landjaeger.
	</div>
	<div class="col-md-8">
		<h3><%= user.username %>'s campgrounds</h3>
		<ul>
			<% campgrounds.forEach(function(campground) { %>
			<li><a href="/campgrounds/<%= campground.id %>"><%= campground.name %></a></li>
			<% }); %>
		</ul>
	</div>
</div>
<% include ../partials/footer %>